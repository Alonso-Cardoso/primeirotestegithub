class Tabuleiro:
    def __init__(self):
        #Inicializa todas as posições com ' '
        self._posicoes = [[' ',' ',' '],[' ',' ',' '],[' ',' ',' ']]
        
    def imprime(self):
        print('\n    | A|B|C',sep="")#impime as letras das colunas
        for cont, linha in enumerate(self._posicoes):
            print("_______")
            print(cont+1," | " + " | ".join(linha),sep=' ')
            
            
            
            
tab = Tabuleiro()
tab.imprime()
